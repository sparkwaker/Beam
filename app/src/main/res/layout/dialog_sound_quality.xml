<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimaryDark"
    android:padding="25dp">

    <TextView
        android:id="@+id/txt_sound_quality_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/sound_quality_option"
        android:textStyle="bold"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:padding="15dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/txt_hd_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/hd_option"
            android:paddingStart="5dp"
            android:textSize="@dimen/text_size_regular"
            android:buttonTint="@color/colorPurple"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/txt_high_quality_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPurple"
            android:textSize="@dimen/text_size_regular"
            android:text="@string/highquality_option"
            android:paddingStart="5dp"/>

        <RadioButton
            android:id="@+id/txt_medium_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPurple"
            android:textSize="@dimen/text_size_regular"
            android:text="@string/medium_option"
            android:paddingStart="5dp"/>

        <RadioButton
            android:id="@+id/txt_low_quality"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/colorPurple"
            android:textSize="@dimen/text_size_regular"
            android:text="@string/low_quality_option"
            android:paddingStart="5dp"/>

    </RadioGroup>

</LinearLayout>